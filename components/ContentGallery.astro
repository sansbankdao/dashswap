---
import SearchBox from './assets/SearchBox.vue'
import SubMenu from './assets/SubMenu.vue'

interface Project {
    name: string;
    description: string;
    link: {
        url?: string;
        target?: string;
        title?: string;
        buttonLabel?: string;
    };
};

const projects: Project[] = [{
    name: 'DASH',
    description: 'An OG blockchain on a mission to empower financial freedom by means of a pure digital cash economy.',
    link: {
        url: '/asset/DASH',
    }
}, {
    name: 'DUSD',
    description: 'Dash USD is a stablecoin pegged to the US Dollarâ€”where financial responsibility meets innovation.',
    link: {
        url: '/assets/DUSD'
    }
}, {
    name: 'SANS',
    description: 'Community-driven accelerator guiding Builders and Creators abilities to a sustainable financial future.',
    link: {
        url: '/asset/XnogFyDJwqWPjRq8hqPeKwmsGnYCLaoas8'
    }
}];
---

<div>

    <!-- <h2 class="text-2xl font-bold text-white mb-4">Latest Projects</h2> -->

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

        <SubMenu class="col-span-2" />

        <SearchBox class="col-span-2" />

        {projects.map(project =>

            <div class="flex flex-col justify-center items-start border border-gray-700 rounded-lg p-4 bg-black">

                <h3 class="text-xl font-semibold text-white mb-2">
                    {project.name}
                </h3>

                <p class="text-gray-400">
                    {project.description}
                </p>

                {
                    project.link?.url ?
                        <a
                            href={project.link.url}
                            title={project.link.title || project.name}
                            target={project.link.target || '_blank'}
                            class="
                                w-full px-4 py-2.5 mt-4 text-center

                                border border-gray-600 rounded-lg

                                hover:text-primary
                                hover:border-primary
                            ">
                            {project.link.buttonLabel || 'View Asset Details'}
                        </a>
                    : null
                }

            </div>

        )}

    </div>

</div>
